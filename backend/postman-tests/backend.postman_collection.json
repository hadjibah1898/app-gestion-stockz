        {
          "name": "Reset Database",
          "request": {
            "method": "DELETE",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{baseUrl}}/test/reset",
              "host": ["{{baseUrl}}"],
              "path": ["test", "reset"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Database reset successful', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 204, 404]);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Test Data",
          "request": {
            "method": "POST",
            "header": [],
